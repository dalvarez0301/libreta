<script>
import { Contacto } from '../models/contacto';
import type { IContacto } from '../types/IContactos';

    const contactoModel = new Contacto();
    let contactos: IContacto[] = [];

    document.addEventListener('DOMContentLoaded', () => {
  


                const form = document.querySelector('form');
                if (form) {
                    form.addEventListener('submit', (e) => {
                        e.preventDefault();

                        const cedula = (document.querySelector('#number-id') as HTMLInputElement)?.value;
                        const nombre = (document.querySelector('#nombre') as HTMLInputElement)?.value;
                        const apellido = (document.querySelector('#apellido') as HTMLInputElement)?.value;
                        const correo = (document.querySelector('#correo') as HTMLInputElement)?.value;
                        const profesion = (document.querySelector('#profesion') as HTMLInputElement)?.value;
                       
                        if (!cedula || !nombre || !apellido || !correo || !profesion) {
                            alert('Por favor, completa todos los campos del formulario.');
                            return;
                        }

                        const nuevoContacto:IContacto = {
                            cedula,
                            nombre,
                            apellido,
                            correo,
                            profesion
                        };

                        contactoModel.agregarContacto(nuevoContacto);
                        console.log('Contacto agregado:', nuevoContacto);
                        form.reset();
                    });
                }
            });

</script>


